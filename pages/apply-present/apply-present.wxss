/* pages/apply-present/apply-present.wxss */
@import "../blood-info/blood-info.wxss";
.present-cont{
  padding: 20rpx 30rpx 0rpx 30rpx;
}
.present-pay{
  color: #afafaf;
  font-size: 24rpx;
  padding: 0 30rpx;
}
.present-pay text{
  color: red;
}
.present-name{
  width: 100%;
  height: 76rpx;
  border-bottom: 1px solid #b3b3b3;
  line-height: 76rpx;
  margin-bottom: 20rpx;
}
.present-cont image{
  width: 20rpx;
  height: 34rpx;
  float: right;
  margin-top: 20rpx;
}
.whithhold-main{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 150rpx;
  margin-bottom: 25rpx;
}
.withhold,.pay-zong{
  width: 42%;
  height: auto;
  border-bottom: 1px solid #b3b3b3;
  margin: 0 auto;
  padding-top: 25rpx;
  font-size: 24rpx;
}
.withhold text{
  display:inline-block;
  line-height: 50rpx;
}
.pay-zong text{
  display:inline-block;
  line-height: 50rpx;
}
.present-btn{
  width: 630rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #f7931e;
  color: white;
  border-radius: 40rpx;
  border: none;
  font-size: 32rpx;
  margin-top: 60rpx;
}
.tishi{
  font-size: 28rpx !important;
  font-weight: bold ;
}
.presents-text{
  font-size: 28rpx;
  height: auto;
  width: 690rpx;
  margin: 0 auto;
  color: #999999;
  position: absolute;
  bottom: 60rpx;
  left: 30rpx;
  
}
.presents-text text{
  display: inline-block;
  font-size: 24rpx;
  line-height: 50rpx;
}
.checkbox{
font-size: 24rpx;
margin-left: 25rpx;
}
.checks{
  color: #75c2e9;
  font-size: 24rpx;
}