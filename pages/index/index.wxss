.index-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 320rpx;
  background: #f7931e;
  box-sizing: border-box;
  align-items: center;
  padding: 0 30rpx;
  color: white;
  overflow: hidden;
}
.head-pic{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.head-text{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 15rpx;
}
.use-name{
  font-size: 28rpx;
  font-weight: bold;
  display: inline-block;
  padding: 0 20rpx;
}
.title{
  display: inline-block;
  padding-left:20rpx;
   font-weight: 100;
}
.price{
  font-size: 80rpx;
  display: inline-block;
  margin-bottom: 10rpx;
}
.sg-view{
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.pro-icon{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
}
.share-btn,.dh-btn{
  width: 200rpx;
  height: 66rpx;
  line-height: 66rpx;
  background: #fff7eb;
  border-radius: 30rpx;
  color: #f7931e;
  text-align: left;
  padding-left: 35rpx;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
  right: -60rpx;
  bottom: 10rpx;
}
.dh{
  margin-top: 30rpx;
}
