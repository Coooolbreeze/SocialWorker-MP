/* pages/health-records/health-records.wxss */
.container{
  background: #f2f2f2
}
.record-container{
  width: 100%;
  height: 190rpx;
  display: flex;
  background: white;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 30rpx;
  border-top: 1px solid #b3b3b3
}
.head-pic{
  width:130rpx;
  height: 130rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}
.man-icon{
   width:36rpx;
  height: 36rpx;
  margin-top: 10rpx;
}
.line-ri{
  width:20rpx;
  height: 40rpx;
  margin-right: 30rpx;
  margin-top: 66rpx;
}
.record-name{
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 20rpx;
}
.old{
  margin-left: 20rpx;
}
.record-view{
  width: 450rpx;
  height: 160rpx;
  background: white;
  margin-left: -40rpx;
  padding-top: 30rpx;
}
.view-btn{
  width: 130rpx;
  height: 50rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: none;
  text-align: center;
  line-height: 50rpx;
  margin-top: 20rpx;
  margin-right: 10rpx;
  background: #f7931e;
  color: white
}

.record-list{
  display: flex;
  flex-direction: column;
   width: 100%;
}
.record-cont{
 padding: 30rpx; 
  background: white;
  height: auto;
  margin-bottom: 30rpx;
}
.record-tit{
  font-size: 30rpx;
  font-weight: 600;
}
.record-date{
  float: right;
  color: #777;
}
.record-msg{
  font-size: 28rpx;
  margin-top: 15rpx;
}
.record-msg text{
  font-size: 28rpx;
}