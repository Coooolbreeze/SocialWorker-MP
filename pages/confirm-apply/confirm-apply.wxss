/* pages/confirm-apply/confirm-apply.wxss */
.container{
 border-top: 1px solid #b3b3b3;
 font-size: 28rpx;
 width: 100%
}
.containers{
  background: #fff;
}
.confirm-view{
  padding: 0 30rpx;
}
.name{
  width: 100%;
  height: 110rpx;
  border-bottom: 1px solid #b3b3b3;
  line-height: 110rpx;
 
}
.lq-btn{
 position: fixed;
 bottom: 0;
 width: 100%;
 height: 108rpx;
 line-height: 108rpx;
 text-align: center;
 font-size: 30rpx;
 background: #f7931e;
 color: white
}
.input-view{
  height: 110rpx;
  line-height: 110rpx;
  position: relative
}
.area-input{
  height: 110rpx;
  border-bottom: 1px solid #b3b3b3;
  line-height: 110rpx;
  color: #939292;
}
.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}
.citybody {
  position: fixed;
  bottom: 0px;
  z-index: 9999;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
  border-top: 1px solid #b3b3b3;
  border-bottom: 1px solid #b3b3b3;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}

.view-text{
  text-align: center;
  line-height: 50px;padding-left:10px;
}
.input-view image{
   width: 20rpx;
   height: 30rpx;
  position: absolute;
  top: 40rpx;
  right: 20rpx;
}
