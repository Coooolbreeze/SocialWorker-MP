/* pages/confirm-order/confirm-order.wxss */
@import '../apply-present/apply-present.wxss';
.order-container {
  background: #f2f2f2;
  height: 1150rpx;
}

.order-view1{
  width: 100%;
  height: 170rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-top: 1px solid #b3b3b3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background: white;
}

.name {
  font-size: 32rpx;
}

.phone {
  font-size: 32rpx;
  margin-left: 20rpx;
}

.area {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.line-ri {
  width: 20rpx;
  height: 34rpx;
}

.line-bt {
  width: 100%;
  height: 8rpx;
  display: block;
  margin-top: -4rpx;
}

.order-view {
  width: 100%;
  height: 220rpx;
  border-bottom: 1px solid #b3b3b3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding:30rpx;
  box-sizing: border-box;
  background: white;
}

.product {
  width: 166rpx;
  height: 166rpx;
}

.product-msg {
  width: 420rpx;
  height: auto;
  padding: 15rpx;
}

.product-name {
 text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  width: 400rpx;
  height: 80rpx;
  display: inline-block;
  font-size: 28rpx;
  color: #545454;
  margin-bottom: 24rpx;
}
.pro-view{
font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.product-price{
  font-size: 28rpx;
  font-weight: bold;
 
}
.price-btn{
  width: auto;
  height: 30rpx;
  line-height: 30rpx;
  background: #29abe2;
  color: white;
  display: inline-block;
  font-size: 20rpx;
  padding: 5rpx 12rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
}
.number{
  font-size: 24rpx;
  margin-top: 16rpx;
}
.dikou{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: white;
  border-bottom: 1px solid #b3b3b3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}
.dikou text{
  font-size: 32rpx;

}
.cols{
  font-weight: bold;
}
.pay{
    border-bottom:none;
}
.order-detail{
  margin-bottom: 30rpx;
}
.yes-btn{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  color: white;
  position: fixed;
  bottom: 0;
  background: #f7931e;
  text-align: center;
}