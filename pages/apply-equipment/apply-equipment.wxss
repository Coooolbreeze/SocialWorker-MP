.flex .item{  
  box-sizing: border-box;
  width: 50%;
  float: left;
  display: inline-block;
  padding: 6px;
  text-align:center;
  position: relative;
}  
.flex .item::after{  
 display: block;
 content: '';
 clear: both;
}  

.service_selection {  
  padding: 15px 10px;  
  background: #fff;  
  margin-bottom: 200rpx;

}  
.service_selection:after {
  display: block;
  content: '';
  clear: both;
}

  
.service_selection label {  
  display: inline-block;
  width: 260rpx;
  height: 260rpx;
