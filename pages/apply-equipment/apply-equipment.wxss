.flex{
 
}  
.flex .item{  
  box-sizing: border-box;
  width: 20%;
  float: left;
  display: inline-block;
  padding: 6px;
  text-align:center;
  position: relative;
}  
.flex .item::after{  
 display: block;
 content: '';
 clear: both;
}  

.service_selection {  
  padding: 15px 10px;  
  background: #fff;  
  /* margin-bottom: 200rpx; */

}  
.service_selection:after {
  display: block;
  content: '';
  clear: both;
}

  
.service_selection label {  
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  font-size: 12px;  
  border-radius: 50%;  
  box-sizing: border-box;
  padding:20px 20px ;
  position: relative;
  border: 1px solid #b3b3b3
}  

.service_selection .is_checked {  
   border: 1px solid #f7931e;   
  color: #f7931e;  
  /* background: #f7931e; */
  box-sizing: border-box;
} 
