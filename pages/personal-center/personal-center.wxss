.center-head{
  width: 100%;
  height: 214rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
   align-items: center;
   border-bottom: 1px solid #b3b3b3;
   border-top: 1px solid #b3b3b3;
   position: relative;
}
.center-text{
  font-size: 40rpx;
