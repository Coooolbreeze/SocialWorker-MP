/* pages/social-work/social-work.wxss */
@import '../service-list/service-list.wxss';
.social-container{
  background: #f2f2f2;
  box-sizing: border-box;
  width: 100%;
}
.social-view{
  height: 320rpx;
  background: #f8a100;
  color: white;
  padding: 50rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  margin-bottom: 20rpx;
  overflow:hidden;
}
.social-tit{
  font-size: 26rpx;
}
.social-name{
  font-size: 28rpx;
  margin-left: 20rpx;
}
.pro-icon{
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.social-price{
  font-size: 100rpx;
}
.price-view{
  font-size: 26rpx;
  color: #facf9d;
}
.price-view text{
  font-size: 26rpx;
}
.tx-view{
  width: 200rpx;
  height: 66rpx;
  line-height: 66rpx;
  background: #fff7eb;
  border-radius: 35rpx;
  border: none;
  position: absolute;
  right: -15%;
  top: 42%;
}
.ri-icon{
  width: 18rpx;
  height: 28rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.tx-view{
 color: #f9a700;
 padding: 0 30rpx;
 font-size: 30rpx;
}

.shour-view{
  width: 100%;
  height: 130rpx;
  background: white;
  border-bottom: 1px solid #b3b3b3;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center
}
.equipemnt-name{
  font-size: 32rpx;
  font-weight: bold;
  
}
.time{
 display: block;
 color: #888888;
 margin-top: 10rpx;
}
.price{
  color: red;
  font-size: 32rpx;
  font-weight: bold
}