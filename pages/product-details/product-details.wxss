/* pages/product-details/product-details.wxss */
swiper{
  width:100%;
  height:500rpx;
}
.banner{
  width: 100%;
  height: 100%;
}
.del-msg{
  width: 100%;
  height: 240rpx;
  background: white;
  padding: 30rpx;
  box-sizing: border-box;
}
.del-title{
  font-size: 36rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.del-tit{
  font-size: 24rpx;
  color: #999;
}
.del-price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.sgq{
  color: red;
  font-weight: bold;
}
.sgq-num{
  font-size: 42rpx;
}
.jia{
  width: auto;
  height: 30rpx;
  line-height: 30rpx;
  background: #29abe2;
  color: white;
  display: inline-block;
  font-size: 20rpx;
  padding: 5rpx 20rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
}
.dh{
  font-size: 24rpx;
  color: #999;
}
.number-view{
  width: 100%;
  height: 100rpx;
  line-height: 110rpx;
  padding: 0 30rpx;
  background: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}

.stepper {  
    width: 100px;  
    height: 26px;  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    
}  
  
.stepper text {  
    width: 26px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
}  

.clear{
  clear: both;
}
.stepper input {  
    width: 42px;  
    height: 26px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  
.stepper .normal{  
    color: black;  
}  
.stepper .disabled{  
    color: #ccc;  
}  

.choose-num{
  font-size: 32rpx;
}
.product-del{
  width: 100%;
  height: auto;
  background: white;
  box-sizing: border-box;
}
.del-top{
  height: 90rpx;
  line-height: 90rpx;  
  border-bottom: 1px solid #b3b3b3;
  padding: 0 30rpx;
   box-sizing: border-box;
   font-size: 32rpx;
}
.del-main{
  margin: 0 auto;
  text-align: center;
  padding: 30rpx;
  box-sizing: border-box;
  padding-bottom: 150rpx;
}
.dh-btn{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  color: white;
  font-size: 40rpx;
  position: fixed;
  bottom: 0;
  background: #f7931e;
}